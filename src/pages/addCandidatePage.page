<apex:page controller="AddCandidateController">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
<head></head>
<body>
	<apex:form>
	<apex:actionFunction name="setParameters" action="{!createCandidate}" reRender="view">
	<apex:param id="surname" name="surname" value="" assignTo="{!surname}" />
	<apex:param id="name" name="name" value="" assignTo="{!name}" />
	<apex:param id="middle-name" name="middleName" value="" assignTo="{!middleName}" />
	<apex:param id="resume" name="resume" value="" assignTo="{!resume}" />
	<apex:param id="position" name="position" value="" assignTo="{!position}" />
	<apex:param id="HR" name="HR" value="" assignTo="{!needHR}" />
	<apex:param id="salary" name="salary" value="" assignTo="{!salary}" />
	<apex:param id="experience" name="experience" value="" assignTo="{!experience}" />
	<apex:param id="telephone" name="telephone" value="" assignTo="{!telephone}" />
	<apex:param id="mail" name="mail" value="" assignTo="{!mail}" />
	<apex:param id="skype" name="skype" value="" assignTo="{!skype}" />
	<apex:param id="coming" name="coming" value="" assignTo="{!coming}" />
	<apex:param id="contact" name="contact" value="" assignTo="{!contact}" />
</apex:actionFunction>

<apex:slds />
<div class="slds-form--stacked slds-p-around--medium slds-m-bottom--x-small">
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Surname
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="surname" class="slds-input" placeholder="Surname" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Name
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="name" class="slds-input" placeholder="Name" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Middle Name
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="middle-name" class="slds-input" placeholder="Middle Name" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">Resume link</label>
		<div class="slds-form-element__control">
			<input type="url" id="resume" class="slds-input" placeholder="Resume link" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Position
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="position" class="slds-input" placeholder="Position" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label">
			<abbr class="slds-required" title="required">*</abbr>HR
		</label>
		<div class="slds-m-vertical--x-small"></div>
		<div class="slds-form-element__control">
			<div class="slds-select_container">
				<apex:selectList styleClass="HR-class" size="1" value="{!selectHR}">
					<apex:selectOptions value="{!getHR}"/>
				</apex:selectList>
			</div>
		</div>
	</div>
	<div class="slds-m-vertical--small"></div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Salary
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="salary" class="slds-input" placeholder="Salary" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Experience
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="experience" class="slds-input" placeholder="Experience" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Number phone
		</label>
		<div class="slds-form-element__control">
			<input type="text" id="telephone" class="slds-input" placeholder="Number phone" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">Mail</label>
		<div class="slds-form-element__control">
			<input type="text" id="mail" class="slds-input" placeholder="Mail" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">Skype</label>
		<div class="slds-form-element__control">
			<input type="text" id="skype" class="slds-input" placeholder="Skype" />
		</div>
	</div>
	<div class="slds-form-element">
		<label class="slds-form-element__label" for="text-input-id-1">
			<abbr class="slds-required" title="required">*</abbr>Source
		</label>
		<div class="slds-m-vertical--small"></div>
		<div class="slds-form-element__control">
			<div class="slds-select_container">
				<apex:selectList styleClass="coming-class" size="1">
					<apex:selectOption itemValue="Invite"/>
					<apex:selectOption itemValue="Response"/>
				</apex:selectList>
			</div>
		</div>
	</div>
	<div class="slds-m-vertical--xx-large"></div>
	<div class="slds-form-element__control">
		<div class="slds-select_container">
			<apex:selectList styleClass="contact-class" size="1">
				<apex:selectOption itemValue="Skype"/>
				<apex:selectOption itemValue="Phone"/>
				<apex:selectOption itemValue="LinkedIn"/>
				<apex:selectOption itemValue="Job search site"/>
			</apex:selectList>
		</div>
	</div>
	<div class="slds-m-vertical--medium"></div>
	<div class="slds-align_absolute-center">
		<button class="slds-button slds-button_brand" onclick="getParameters()" reRender="view">Create candidate</button>
	</div>
</div>

</apex:form>

<script type="text/javascript">

function getParameters() {
	let surnameValue = document.querySelector('#surname').value;
	let nameValue = document.querySelector('#name').value;
	let middleNameValue = document.querySelector('#middle-name').value;
	let resumeValue = document.querySelector('#resume').value;
	let positionValue = document.querySelector('#position').value;
	let HRValue = document.querySelector('.HR-class').value;
	let salaryValue = document.querySelector('#salary').value;
	let experienceValue = document.querySelector('#experience').value;
	let telephoneValue = document.querySelector('#telephone').value;
	let mailValue = document.querySelector('#mail').value;
	let skypeValue = document.querySelector('#skype').value;
	let comingValue = document.querySelector('.coming-class').value;
	let contactValue = document.querySelector('.contact-class').value;
	setParameters(surnameValue, nameValue, middleNameValue, resumeValue, positionValue, HRValue, salaryValue, experienceValue, telephoneValue, mailValue, skypeValue, comingValue, contactValue);
};
       
</script>

</body>
</html>
</apex:page>
<apex:component controller="MainController">
	<apex:pageBlock>
		<apex:pageBlockTable value="{!workersList}" var="worker">
			<apex:column value="{!worker.name}"/>
			<apex:column value="{!worker.Surname__c}"/>
			<apex:column value="{!worker.MiddleName__c}"/>
			<apex:column value="{!worker.Role__r.Name}"/>
		</apex:pageBlockTable>
</apex:pageBlock>
</apex:component>